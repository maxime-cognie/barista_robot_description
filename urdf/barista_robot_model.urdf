<?xml version="1.0"?>
<robot name="barista_bot">

  <material name="grey">
    <color rgba="0.6 0.6 0.6 1"/>
  </material>

  <material name="black">
    <color rgba="0.1 0.1 0.1 1"/>
  </material>

  <material name="blue">
    <color rgba="0.2 0.1 0.8 1"/>
  </material>

  <link name="base_link">
  </link>

  <joint name="base_link_joint" type="fixed">
    <origin rpy="0 0 0" xyz="0 0 0" />
    <parent link="base_link" />
    <child link="chassis" />
  </joint>

  <link name="chassis">
    <!-- body -->
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <cylinder length="0.155" radius="0.356"/>
      </geometry>
      <material name="grey"/>
    </visual>

    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <cylinder length="0.155" radius="0.356"/>
      </geometry>
    </collision>

    <inertial>
      <mass value="5"/>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <inertia ixx="0.16843041666666667" ixy="0" ixz="0" iyy="0.16843041666666667" iyz="0" izz="0.31683999999999996"/>
    </inertial>
      

    <!-- standoff rods -->
    <visual>
      <origin xyz="0.050 0.250 0.1875" rpy="0 0 0"/>
      <geometry>
        <cylinder length="0.220" radius="0.020"/>
      </geometry>
    </visual>
    <visual>
      <origin xyz="-0.050 0.250 0.1875" rpy="0 0 0"/>
      <geometry>
        <cylinder length="0.220" radius="0.020"/>
      </geometry>
    </visual>
    <visual>
      <origin xyz="0.050 -0.250 0.1875" rpy="0 0 0"/>
      <geometry>
        <cylinder length="0.220" radius="0.020"/>
      </geometry>
    </visual>
    <visual>
      <origin xyz="-0.050 -0.250 0.1875" rpy="0 0 0"/>
      <geometry>
        <cylinder length="0.220" radius="0.020"/>
      </geometry>
    </visual>

    <collision>
      <origin xyz="0.050 0.250 0.1875" rpy="0 0 0"/>
      <geometry>
        <cylinder length="0.220" radius="0.020"/>
      </geometry>
    </collision>
    <collision>
      <origin xyz="-0.050 0.250 0.1875" rpy="0 0 0"/>
      <geometry>
        <cylinder length="0.220" radius="0.020"/>
      </geometry>
    </collision>
    <collision>
      <origin xyz="0.050 -0.250 0.1875" rpy="0 0 0"/>
      <geometry>
        <cylinder length="0.220" radius="0.020"/>
      </geometry>
    </collision>
    <collision>
      <origin xyz="-0.050 -0.250 0.1875" rpy="0 0 0"/>
      <geometry>
        <cylinder length="0.220" radius="0.020"/>
      </geometry>
    </collision>
    
    <inertial>
      <mass value="0.5"/>
      <origin xyz="0.050 0.250 0.1875" rpy="0 0 0"/>
      <inertia ixx="0.0020666666666666663" ixy="0" ixz="0" iyy="0.0020666666666666663" iyz="0" izz="0.0001"/>
    </inertial>
    <inertial>
      <mass value="0.5"/>
      <origin xyz="-0.050 0.250 0.1875" rpy="0 0 0"/>
      <inertia ixx="0.0020666666666666663" ixy="0" ixz="0" iyy="0.0020666666666666663" iyz="0" izz="0.0001"/>
    </inertial>
    <inertial>
      <mass value="0.5"/>
      <origin xyz="0.050 -0.250 0.1875" rpy="0 0 0"/>
      <inertia ixx="0.0020666666666666663" ixy="0" ixz="0" iyy="0.0020666666666666663" iyz="0" izz="0.0001"/>
    </inertial>
    <inertial>
      <mass value="0.5"/>
      <origin xyz="-0.050 -0.250 0.1875" rpy="0 0 0"/>
      <inertia ixx="0.0020666666666666663" ixy="0" ixz="0" iyy="0.0020666666666666663" iyz="0" izz="0.0001"/>
    </inertial>

    <!-- cup holder tray-->
    <visual>
      <origin xyz="0 0 0.3425" rpy="0 0 0"/>
      <geometry>
        <cylinder length="0.090" radius="0.320"/>
      </geometry>
    </visual>

    <collision>
      <origin xyz="0 0 0.3425" rpy="0 0 0"/>
      <geometry>
        <cylinder length="0.090" radius="0.320"/>
      </geometry>
    </collision>

    <inertial>
      <mass value="1"/>
      <origin xyz="0 0 0.3425" rpy="0 0 0"/>
      <inertia ixx="0.026275" ixy="0" ixz="0" iyy="0.026275" iyz="0" izz="0.0512"/>
    </inertial>
  </link>

  <joint name="front_caster_wheel_joint" type="fixed">
    <origin xyz="0.25 0 -0.0775" rpy="0 0 0"/>
    <parent link="chassis"/>
    <child link="front_caster_wheel"/>
  </joint>

  <!-- front caster wheel link -->
  <link name="front_caster_wheel">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <sphere radius="0.0352"/>
      </geometry>
      <material name="blue"/>
    </visual>

    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <sphere radius="0.0352"/>
      </geometry>
    </collision>

    <inertial>
      <mass value="0.05"/>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <inertia ixx="0.00002478" ixy="0" ixz="0" iyy="0.00002478" iyz="0" izz="0.00002478"/>
    </inertial>
  </link>

  <gazebo reference="front_caster_wheel">
    <kp>1000000000000000000000000000.0</kp>
    <kd>1000000000000000000000000000.0</kd>
    <mu1>0.1</mu1>
    <mu2>0.1</mu2>
    <material>Gazebo/Blue</material>
  </gazebo>

  <joint name="back_cater_wheel_joint" type="fixed">
    <origin xyz="-0.25 0 -0.0775" rpy="0 0 0"/>
    <parent link="chassis"/>
    <child link="back_caster_wheel"/>
  </joint>

  <!-- back caster wheel link -->
  <link name="back_caster_wheel">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <sphere radius="0.0352"/>
      </geometry>
      <material name="blue"/>
    </visual>

    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <sphere radius="0.0352"/>
      </geometry>
    </collision>

    <inertial>
      <mass value="0.05"/>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <inertia ixx="0.00002478" ixy="0" ixz="0" iyy="0.00002478" iyz="0" izz="0.00002478"/>
    </inertial>
  </link>

  <gazebo reference="back_caster_wheel">
    <kp>1000000000000000000000000000.0</kp>
    <kd>1000000000000000000000000000.0</kd>
    <mu1>0.1</mu1>
    <mu2>0.1</mu2>
    <material>Gazebo/Blue</material>
  </gazebo>


  <joint name="left_wheel_joint" type="continuous">
    <origin xyz="0 0.25 -0.0775" rpy="0 0 0"/>
    <parent link="chassis"/>
    <child link="left_wheel"/>
    <axis xyz="0 1 0" />
    <limit effort="1000.0" velocity="100.0" />
    <dynamics damping="0.0" friction="0.1"/>
  </joint>

  <link name="left_wheel">
    <visual>
      <origin xyz="0 0 0" rpy="0 1.5707 1.5707"/>
      <geometry>
        <cylinder length="0.0206" radius="0.0352"/>
      </geometry>
      <material name="black"/>
    </visual>

    <collision>
      <origin xyz="0 0 0" rpy="0 1.5707 1.5707"/>
      <geometry>
        <cylinder length="0.0206" radius="0.0352"/>
      </geometry>
      <material name="black"/>
    </collision>

    <inertial>
      <mass value="0.5"/>
      <origin xyz="0 0 0" rpy="0 1.5707 1.5707"/>
      <inertia ixx="0.00017256166666666667" ixy="0" ixz="0" iyy="0.00017256166666666667" iyz="0" izz="0.00030976"/>
    </inertial>
  </link>

  <gazebo reference="left_wheel">
    <kp>1000000000000000000000000000.0</kp>
    <kd>1000000000000000000000000000.0</kd>
    <mu1>10.0</mu1>
    <mu2>10.0</mu2>
    <material>Gazebo/Black</material>
  </gazebo>

  <joint name="right_wheel_joint" type="continuous">
    <origin xyz="0 -0.25 -0.0775" rpy="0 0 0"/>
    <parent link="chassis"/>
    <child link="right_wheel"/>
    <axis xyz="0 1 0"/>
    <limit effort="1000.0" velocity="100.0"/>
    <dynamics damping="0.0" friction="0.1"/>
  </joint>

  <link name="right_wheel">
    <visual>
      <origin xyz="0 0 0" rpy="0 1.5707 1.5707" />
      <geometry>
        <cylinder length="0.0206" radius="0.0352"/>
      </geometry>
      <material name="black"/>
    </visual>

    <collision>
      <origin xyz="0 0 0" rpy="0 1.5707 1.5707" />
      <geometry>
        <cylinder length="0.0206" radius="0.0352"/>
      </geometry>
    </collision>

    <inertial>
      <mass value="0.5"/>
      <origin xyz="0 0 0" rpy="0 1.5707 1.5707"/>
      <inertia ixx="0.00017256166666666667" ixy="0" ixz="0" iyy="0.00017256166666666667" iyz="0" izz="0.00030976"/>
    </inertial>
  </link> 

  <gazebo reference="right_wheel">
    <kp>1000000000000000000000000000.0</kp>
    <kd>1000000000000000000000000000.0</kd>
    <mu1>10.0</mu1>
    <mu2>10.0</mu2>
    <material>Gazebo/Black</material>
  </gazebo>

  <gazebo>
    <plugin name="barista_bot_joint_state" filename="libgazebo_ros_joint_state_publisher.so">
    <ros>
        <remapping>~/out:=joint_states</remapping>
    </ros>
    <update_rate>20</update_rate>
    <joint_name>left_wheel_joint</joint_name>
    <joint_name>right_wheel_joint</joint_name>
    </plugin>
  </gazebo>

  <!-- Differential drive -->
  <gazebo>
    <plugin filename="libgazebo_ros_diff_drive.so" name="differential_drive_controller">

      <!-- wheels -->
      <left_joint>left_wheel_joint</left_joint>
      <right_joint>right_wheel_joint</right_joint>

      <!-- kinematics -->
      <wheel_separation>0.5</wheel_separation>
      <wheel_diameter>0.0704</wheel_diameter>

      <!-- limits -->
      <max_wheel_torque>1.0</max_wheel_torque>
      <max_wheel_acceleration>2.0</max_wheel_acceleration>

      <!-- output -->
      <publish_odom>true</publish_odom>
      <publish_odom_tf>true</publish_odom_tf>

      <odometry_frame>odom</odometry_frame>
      <robot_base_frame>base_link</robot_base_frame>

    </plugin>
  </gazebo>

  <joint name="hokuyo_laser_joint" type="fixed">
    <origin xyz="0.3 0 0.0775" rpy="0 0 0"/>
    <parent link="chassis"/>
    <child link="hokuyo_laser"/>
  </joint>

  <link name="hokuyo_laser">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <mesh filename="package://barista_robot_description/meshes/hokuyo_urg_04lx.dae" scale="1.0 1.0 1.0"/>
      </geometry>
    </visual>

    <collision>
      <origin xyz="0 0 0.035" rpy="0 0 0"/>
      <geometry>
        <box size="0.045 0.045 0.070"/>
      </geometry>
    </collision>

    <inertial>
      <mass value="0.01"/>
      <origin xyz="0 0 0.035" rpy="0 0 0"/>
      <inertia ixx="0.000005771" ixy="0" ixz="0" iyy="0.000005771" iyz="0" izz="0.00000338"/>
    </inertial>
  </link>

  <joint name="laser_scan_frame_joint" type="fixed">
    <origin xyz="0 0 0.06" rpy="0 0 0"/>
    <parent link="hokuyo_laser"/>
    <child link="laser_scan_frame"/>
  </joint>

  <link name="laser_scan_frame">
  </link>

  <gazebo reference="laser_scan_frame">
    <sensor name="sensor_ray" type="ray">
        <pose>0 0 0 0 0 0</pose>
        <ray>
          <scan>
            <horizontal>
              <samples>360</samples>
              <resolution>1.0</resolution>
              <min_angle>-3.14</min_angle>
              <max_angle>3.14</max_angle>
            </horizontal>
          </scan>
          <range>
            <min>0.1</min>
            <max>15.0</max>
          </range>
        </ray>
        <always_on>true</always_on>
        <visualize>true</visualize>
        <update_rate>20.0</update_rate>
        <plugin name="laser" filename="libgazebo_ros_ray_sensor.so">
          <ros>
            <namespace>/barista_bot</namespace>
            <remapping>~/out:=scan</remapping>
          </ros>
          <output_type>sensor_msgs/LaserScan</output_type>
        </plugin>
    </sensor>
  </gazebo>

</robot>